Pain.AAA:
PLAY H 0 A_SpawnItemEx("BloodHit")
PLAY H 0 ThrustThing(random(0,255),random(30,255),1,0)
PLAY H 0 ThrustThingZ(0,random(20,255),random(0,1),1)
Goto pain+1

Pain:
PLAY H 0 A_ScaleVelocity(0.75)
PLAY H 0 A_JumpIfInventory("EnkerMirrorCount",1,"EnkerAbsorb")
PLAY H 0 A_Pain
PLAY H 1 A_SpawnItem("PainFX",0,3)
PLAY H 1 A_Recoil(1)
PLAY HHHHHHHHH 2 A_SpawnItem("PainFX",0,3)
PLAY H 1
Goto Spawn
Death.WindStorm:
Death.GravityHold:
PLAY H 0 A_StopSound(7)
PLAY H 0 SetPlayerProperty(0, 0, 4)
PLAY H 0 A_ChangeFlag("NOINTERACTION", 1)
PLAY H 0 A_TakeInventory("WeaponCharge",999)
PLAY H 0 A_NoBlocking
PLAY H 0 A_TakeInventory("CutterFlag",999)
PLAY H 0 A_GiveInventory("IsDead",1)
PLAY H 0 A_Stop
PLAY H 0 A_GiveToTarget("KilledMeStock",1)
PLAY H 1 A_GiveToTarget("KilledMe",1)
PLAY H 0 A_GiveToTarget("BloodMeter",ACS_ExecuteWithResult(884))
PLAY H 1 A_GiveToTarget("DeathReward",1)
PLAY H 0 ACS_ExecuteAlways(999,0,0)
PLAY H 0 SetPlayerProperty(0, 0, 4)
RiseMyMegaman:
PLAY H 1 ThrustThingZ(0,10,0,1)
PLAY H 0 A_JumpIf(ceilingz-z<64, "ExplodeNow")
PLAY H 0 A_GiveInventory("Cutterflag", 1)
PLAY H 0 A_JumpIfInventory("CutterFlag", 35, "ExplodeNow")
Goto RiseMyMegaman
ExplodeNow:
PLAY H 0 A_Stop
PLAY H 0 A_PlayerScream
PLAY H 0 A_GiveInventory("CutterFlag",999)
PLAY H 0 A_SpawnItemEx("FakeDeathFX", 0, 0, 0)
PLAY Z 1 A_CheckPlayerDone
wait
Death.Beam:
//Death.GravityHold:
Death.instagib:
Death.Telefrag:
PLAY H 0 A_StopSound(7)
PLAY Z 1 SetPlayerProperty(0, 0, 4)
PLAY H 0 A_GiveToTarget("KilledMe",1)
PLAY H 0 A_GiveToTarget("KilledMeStock",1)
PLAY H 0 A_GiveToTarget("DeathReward",1)
PLAY H 0 A_GiveToTarget("BloodMeter",ACS_ExecuteWithResult(884))
PLAY H 0 A_GiveInventory("CutterFlag",999)
PLAY H 0 A_TakeInventory("WeaponCharge",999)
PLAY H 0 A_GiveInventory("IsDead",1)
PLAY Z 0 A_PlayerScream
PLAY H 0 A_SpawnItemEx("FakeDeathFX", 0, 0, 32)
PLAY Z 1 A_CheckPlayerDone
wait
Death:
PLAY H 0 A_StopSound(7)
PLAY H 0 SetPlayerProperty(0, 0, 4)
PLAY H 0 A_TakeInventory("WeaponCharge",999)
PLAY H 0 A_NoBlocking
PLAY H 0 A_GiveInventory("CutterFlag",999)
PLAY H 0 A_GiveInventory("IsDead",1)
PLAY H 0 A_Stop
PLAY H 0 A_GiveToTarget("KilledMeStock",1)
PLAY H 0 A_GiveToTarget("DeathReward",1)
PLAY H 0 A_GiveToTarget("BloodMeter",ACS_ExecuteWithResult(884))
PLAY H 1 A_GiveToTarget("KilledMe",1)
PLAY H 19 ACS_ExecuteAlways(999,0,0)
PLAY H 0 SetPlayerProperty(0, 0, 4)
PLAY H 0 A_PlayerScream
PLAY H 0 A_SpawnItemEx("FakeDeathFX", 0, 0, 32)
PLAY Z 1 A_CheckPlayerDone
wait
}
}


//silly workarounds thanks to jax
actor BloodHit
{
Height 0
Radius 0
+NOINTERACTION
-SOLID
+NOGRAVITY
+MISSILE
States
{
Spawn:
TNT1 A 0
TNT1 A 1 A_GiveToTarget("BloodHitPickup",1)
stop
}
}

actor BloodHitPickup : CustomInventory
{
inventory.amount 1
inventory.maxamount 1
States
{
Spawn:
TNT1 A 0
stop
Pickup:
TNT1 A 0
TNT1 A 1 A_GiveToTarget("BloodMeter",ACS_ExecuteWithResult(884))
stop
}
}

actor DoomSphereX : DoomSphere
{
Powerup.Duration -10
}